{
  "name": "Git Pullbot Extension",
  "description": "Uma extensão do chrome para gerenciar repositórios do git, e automatizar o processo do fechamento de milestones",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "bot.html",
    "default_icon": "imageIcon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens bot.html"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["index.js"]
    }
  ]
}
